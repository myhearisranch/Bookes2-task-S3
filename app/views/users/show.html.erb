<% if flash[:notice] %>
 <p><%= flash[:notice] %></p>
 <% end %>

 <h1>User info</h1>
 

<div class="profile-container">
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <h3 class="profile-name"><%= @user.name %></h3>
  <%= @user.introduction %>
 <button><%= link_to "ボダン", edit_user_path(@user) %></button>
</div>

 <h1>New book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
   <%= f.text_field :title %>
  <h4>Opinon</h4>
   <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
  <% end %>

  <h1>Books</h1>
  <table>
      <tr>
          <th>Title</th>
          <th>Opinon</th>
      </tr>
      <% @books.each do |book| %>
      <tr>
          <td>book.title</td>
          <td>book.body</td>
      </tr>
      <% end %>
  </table>

