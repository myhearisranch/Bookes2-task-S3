<h1>New book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model: @book, local:true do |f| %>
  <h4>image</h4>
   <%= f.attachment_field :image %>
  <h4>Title</h4>
   <%= f.text_field :title %>
  <h4>Opinon</h4>
   <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
  <% end %>