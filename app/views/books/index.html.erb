<h1>New book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model: @book, local:true do |f| %>
  <h4>image</h4>
   <%= f.attachment_field :image %>
  <h4>Title</h4>
   <%= f.text_field :title %>
  <h4>Opinon</h4>
   <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
  <% end %>


<table>
  <tr>
   <th></th>
   <th>Title</th>
   <th>Opinion</th>
   <th colspan="3"></th>
  </tr>

 <% @book_images.each do |book_image| %>
 <tr>
  <td></td>
  <td><%= link_to book_image.title, book_path(book_image.id) %></td>
  <td><%= book_image.body %></td>
 </tr>
<% end %>
</table>
