

<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
  <h1>User info</h1>
 <div class="profile-container">
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>

  <table class="table">
   <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
     <th>introduction</th>
     <th><%= @user.introduction %></th>
    </tr>
   </tbody>
  </table>
  <div class="row">
   <a class="btn btn-outline-secondary btn-block fas fa-user-cog " href="/users/:id/edit"></a>

  </div>
</div>


<h2 class="mt-3">New book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model: @book, local:true do |f| %>
 <div class ="form-group">
  <label>Title</label>
  <text_area class=""><%= f.text_field :title %></text_area>
 </div>

 <div class ="form-group">
  <label>Opinon</label>
  <text_area class= ><%= f.text_area :body %></text_area>
 <div class="form-group">
  <button class="btn btn-success">
   <%= f.submit 'Create Book' %>
  </button>
 </div>
  <% end %>
 </div>
</div>


<div class="col-md-8 offset-md-1">
 <h2>Books</h2>
 <table class="table table-hover table-inverse">
  <tr>
   <th></th>
   <th>Title</th>
   <th>Opinion</th>
   <th colspan="3"></th>
  </tr>

 <% @books.each do |book| %>
 <tr>
  <td><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
  <td><%= link_to book.title , book_path(book)  %></td>
  <td><%= book.body %></td>


 </tr>
<% end %>

</table>
 </div>
</div>


</div>







