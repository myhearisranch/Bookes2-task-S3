
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<div class="container">
  <div class="row">
    <div  class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
       <h1>Editing Book</h1>
<%= form_with model:@book,local:true do |f| %>
<div class="form-group">
  <label>Title</label>
  <%= f.text_field :title %>
</div>

<div class="form-group">
  <label>Opinon</label>
  <%= f.text_area :body %>
</div>


  <%= f.submit 'Update Book ' , class: "btn btn-success" %>
<% end %>

<%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>
    </div>

  </div>

</div>


